<%= form_for @book, html: {multipart: true} do |f| %>

	<div class='field'>
		<%= f.label :name %><br>
		<%= f.text_field :name%>
	</div>

	<div class='field'>
		<%= f.label :picture %><br>
		<%= f.file_field :picture %><br>
	</div>

	<%=fields_for "author" do |fa| %>
		<div class='field'>
			<%= fa.label :first_name %><br>
			<%= fa.text_field :first_name %>
		</div>

		<div class='field'>
			<%= fa.label :last_name %><br>
			<%= fa.text_field :last_name %>
		</div>
	<% end %>

	<div class='actions'>
		<%= f.submit %>
	</div>

<% end %>

<%= link_to "Back", books_path %>